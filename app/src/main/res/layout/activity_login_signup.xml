<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@drawable/buttonless_login_background"
    tools:context="edu.orangecoastcollege.cs273.ecoquest.LoginSignupActivity" >


    <android.support.v7.widget.CardView
        android:id="@+id/loginCardView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        android:layout_above="@+id/signupCardView"
        android:layout_alignStart="@+id/signupCardView"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/loginEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:hint="login"
            android:text="login"
            android:textColor="#009688" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/signupCardView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/signupEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#009688"
            android:textStyle="bold"
            android:text="sign up" />
    </android.support.v7.widget.CardView>



</RelativeLayout>
