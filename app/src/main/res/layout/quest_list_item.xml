<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/questIconImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/woodpecker"/>

    <LinearLayout
        android:id="@+id/questsTextHolderLinearLayout"
        android:layout_toEndOf="@id/questIconImageView"
        android:paddingTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Quest Name"/>

        <TextView
            android:id="@+id/questDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quest description goes here"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/questCompleteStatusImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@id/questsTextHolderLinearLayout"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/ic_launcher_round"/>
</RelativeLayout>
